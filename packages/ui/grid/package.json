{
  "name": "@jerryshim-ui/grid",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./preset.css": "./dist/preset.css"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@jerryshim-ui/style-utils": "workspace:*",
    "@jerryshim-ui/primitives": "workspace:*",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@jerryshim/builder": "workspace:*",
    "@jerryshim/theme-builder": "workspace:*",
    "@jerryshim/eslint-config": "workspace:*",
    "@jerryshim/typescript-config": "workspace:*",
    "eslint": "^9.18.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "build": "jerry-build . --css-exports copy",
    "theme:build": "jerry-theme-build .",
    "theme:sync": "jerry-theme-build sync",
    "theme:init": "jerry-theme-build init",
    "dev": "jerry-build . --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  }
}
